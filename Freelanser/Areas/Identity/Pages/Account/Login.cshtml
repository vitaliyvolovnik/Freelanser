@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section AutorizeStyles{
    <link rel="stylesheet" href="~/css/LoginStyle.css?v=@DateTime.Now.Millisecond" asp-append-version="true" /> 
}
<div class="BodyDiv">
        <div class="container1">
           
            <div class="form-outer">
            <form id="account" method="post">
                <div class="page">
                    <div class="title">
                        Sign In
                    </div>
                    <div class="field">
                        <div class="label">
                        Email
                        </div>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <div class="label">
                            Password
                        </div>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="field" style="margin: 0;">
                        <div class="chekBDiv">
                            
                            <input type="checkbox" asp-for="Input.RememberMe" class="custom-checkbox" id="rememberMe" name="happy" value="yes">
                            <label asp-for="Input.RememberMe" for="rememberMe">Remember me</label>
                        </div>
                    </div>
                   
                    <div class="field" style="margin-bottom:5px;">
                        <button class="firstNext next" id="login-submit" type="submit">Login</button>

                    </div>
                    <div >
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    <div >
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                    <div >
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
