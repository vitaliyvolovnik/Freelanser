@model Freelanser.Models.AddWorkModel

@{
    ViewData["Title"] = "AddWork";
}

<h4>Work</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PublishWork">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Name)
                @Html.TextBoxFor(x=>x.Name)
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Context)
                @Html.TextAreaFor(x=>x.Context,10,22,new{})
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Price)
                @Html.EditorFor(x=>x.Price)
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.SkillsStr)
                @Html.EditorFor(x=>x.SkillsStr,null,new {id="SkillsStr"})
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                <label for="inputDate">Finish date</label>
                <input type="datetime-local" name="Finish" id="inputDate" runat="server">
            </div>
            <div class="form-group">
                <div class="radio">
                    @Html.RadioButtonFor(x=>x.TypeOfPayment,"fixed-price",new{id="radio-1"})
                    <label for="radio-1" class="radio-label">fixed-price</label>
                </div>
                <div class="radio">
                    @Html.RadioButtonFor(x=>x.TypeOfPayment,"hourly-rate",new{id="radio-2"})
                    <label for="radio-2" class="radio-label">hourly-rate</label>
                </div>
            </div>
            <div class="form-group">
                <select name="CategoryName" id="CategoryName" > 
                    @foreach(var item in Model.Cateories)
                    {
                        if (!item.IsMainCategory)
                        {
                            <option value="@item.Name" id="myselect" name="CategoryName" class="CategorySelect">@item.Name</option>
                        }
                    }
                </select>
            </div>
            
            
            <div class="form-group">
                <table id="tblFruits">
                     @foreach(var item in Model.Cateories)
                    {
                        int i = 0;
                        @foreach(var skill in item.Skill)
                        {
                            string Id = $"chk{i}";
                            <tr>
                                <td class="opt @item.Name.Replace(" ","_").Replace("&","_")"><input id=@Id class="opt1 @item.Name.Replace(" ","_").Replace("&","_")" type="checkbox" value="@skill.Name"/><label for="@Id">@skill.Name</label></td>
                            </tr>
                        }
                    }
                    
                    
                </table>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section AddWScripts
{<script src="~/js/AddWork.js"></script>}
    
