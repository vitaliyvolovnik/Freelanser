<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Freelanser</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css?v=@DateTime.Now.Millisecond" />
    
    <link rel="stylesheet" href="~/css/site.css?v=@DateTime.Now.Millisecond" asp-append-version="true" />
    <link rel="stylesheet" href="~/Freelanser.styles.css?v=@DateTime.Now.Millisecond" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HeaderStyle.css?v=@DateTime.Now.Millisecond" />
    <link rel="stylesheet" href="~/css/FooterStyle.css?v=@DateTime.Now.Millisecond" />
    @RenderSection("ItStyle",false)
    @RenderSection("AutorizeStyles",false)
    @RenderSection("WorkList",false)
    @RenderSection("Office",false)
    @RenderSection("Work",false)
    @RenderSection("EmpList",false)
    @RenderSection("EmpViewSt",false)
    @RenderSection("AddWork",false)
    @RenderSection("FinishStyle",false)
    <link rel="stylesheet" href="~/css/RegisterRadioBtnStyle.css" asp-append-version="true" />
    
</head>
<body>
    <header style="background-color: #232323;">
       <div class="headerMenu">
            <div class="Menu">
                <div class="logo">
                    <div style="font-size:25px"><img src="~/Images/F.png" style="align-items:flex-end" width="15px"/>reelanser</div>
                </div>
                @Html.ActionLink("Home","Index","Home",null,new { @class="HeaderItem Home"})
                @Html.ActionLink("Fint a Job","WorkList","Work",null,new { @class="HeaderItem Fint"})
                @Html.ActionLink("Post a Job","AddWork","Work",null,new { @class="HeaderItem Post"})
                @Html.ActionLink("Find a Talant","EmployeeList","Employee",null,new { @class="HeaderItem About"})
                
            </div>
            <div class="account">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>
    <div class="container" style="margin-bottom:150px">
        <main role="main"  style="min-height:80vh">
            @RenderBody()
        </main>
    </div>
    
    <footer class="footer text-muted">
        <div class="rect" style="display:flex;justify-content:center;flex-direction:row;align-items:flex-start">
           <div style="width:76%;margin:auto 0;align-self:flex-start;height:100%;display:flex;">
               <div class="logo" style="align-self:flex-start;line-height:30px">
                    <div style="font-size:25px"><img src="~/Images/F.png" style="align-items:flex-end" width="15px"/>reelanser</div>
                </div>
                <div class="logo" style="align-self:flex-start; margin-left:20px;display:flex;flex-direction:column">
                    <div style="font-size:22px;margin:3px;line-height:30px">
                        Contacts
                    </div>
                    <div style="font-size:18px;margin:3px;line-height:30px">
                        FrelanserWork@gmail.com
                    </div> 
                     <div style="font-size:18px;margin:3px;line-height:30px">
                       +3540654900654
                    </div>
                     <div style="font-size:18px; margin:3px;line-height:30px">
                        +380804382430
                    </div>
                </div>
           </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("AddWScripts",false)
    @RenderSection("WorkListScript",false)
    @RenderSection("CommentScript",false)
    @RenderSection("EditScript",false)
    @RenderSection("EmpJs",false)
    @RenderSection("FInishWorkJS",false)
</body>
</html>
