@using Domain.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="HeaderItem" style="align-self:center">
        <a asp-area="Identity" style="color:rgb(69, 191, 85);font-size: 20px;font-family: 'Mulish', sans-serif;" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </div>
    <div class="HeaderItem">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn" style="color:rgb(237, 231, 210);font-size: 20px;font-family: 'Mulish', sans-serif;">Logout</button>
        </form>
    </div>
}
else
{
    <div class="HeaderItem">
        <a style="color:rgb(69, 191, 85);font-size: 20px;font-family: 'Mulish', sans-serif;" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="HeaderItem">
        <a style="color:rgb(237, 231, 210);font-size: 20px;font-family: 'Mulish', sans-serif;" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}

